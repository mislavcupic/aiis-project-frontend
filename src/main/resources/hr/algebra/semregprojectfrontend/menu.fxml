<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.algebra.semregprojectfrontend.controller.MenuController"
            prefWidth="600" prefHeight="400">

<!-- Gornji dio: naslovi i gumbi -->
<top>
    <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
        <Label text="Seminar Registration System" style="-fx-font-size: 20px;"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Manage Seminars" onAction="#openSeminarScene"/>
            <Button text="Manage Students" onAction="#openStudentScene"/>
            <Button text="Register Student to Seminar" onAction="#openRegistrationScene"/>
        </HBox>
    </VBox>
</top>

<!-- Središnji dio gdje će se učitavati fxml-ovi -->
<center>
    <AnchorPane fx:id="contentPane"/>
</center>
</BorderPane>
