<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.algebra.semregprojectfrontend.controller.StudentController"
            prefWidth="600" prefHeight="400">

    <top>
        <ToolBar>
            <Button text="Back to Menu" onAction="#backToMenu"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="studentTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="emailColumn" text="Email"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" padding="10">
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Name"/>
                <TextField fx:id="emailField" promptText="Email"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Create" onAction="#handleCreate"/>
                <Button text="Update Selected" onAction="#handleUpdate"/>
                <Button text="Delete Selected" onAction="#handleDelete"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="Refresh" onAction="#loadStudents"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
